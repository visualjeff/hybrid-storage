{
  "name": "hybrid-storage",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:lib": "vite build -c vite.config.lib.ts && node -e \"const fs = require('fs'); const path = require('path'); const distDir = path.join(__dirname, 'dist'); fs.readdirSync(distDir).forEach(file => { if ((file.endsWith('.d.ts') && !file.match(/^(index|useUnstorage(?!.*example)|useIndexedDB(?!.*example)|useHybridSignal)/)) || file === 'vite.svg') { fs.unlinkSync(path.join(distDir, file)); console.log('Removed:', file); } });\"",
    "pack:lib": "npm run build:lib && npm pack"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.37",
    "idb-keyval": "^6.2.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "unstorage": "^1.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "files": [
    "/dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.md",
    "package.json"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./useUnstorage": {
      "import": "./dist/useUnstorage.js"
    },
    "./useUnstorage.signals": {
      "import": "./dist/useUnstorage.signals.js"
    },
    "./useUnstorage.utils": {
      "import": "./dist/useUnstorage.utils.js"
    },
    "./useHybridSignal": {
      "import": "./dist/useHybridSignal.js"
    },
    "./useIndexedDBStorage": {
      "import": "./dist/useIndexedDBStorage.js"
    },
    "./useIndexedDBSignal": {
      "import": "./dist/useIndexedDBSignal.js"
    },
    "./useIndexedDBHybridSignal": {
      "import": "./dist/useIndexedDBHybridSignal.js"
    },
    "./useIndexedDBStorage.utils": {
      "import": "./dist/useIndexedDBStorage.utils.js"
    }
  }
}
